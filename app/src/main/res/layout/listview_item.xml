<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <com.example.administrator.test.view.MyImageView
        android:id="@+id/iv_icon"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_marginRight="10dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_icon"
        android:maxLines="1"
        android:text="asdfsadfsadfasdfsadfsadfasdfsadfsadfasdfsadfsadf"
        android:textAllCaps="false"
        android:textColor="#000"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_title"
        android:layout_toRightOf="@id/iv_icon"
        android:maxLines="2"
        android:text="asdfsadfsadfasdfsadfsadfasdfsadfsadfasdfsadfsadfasdfsadfsadfasdfsadfsadfasdfsadfsadfasdfsadfsadf"
        android:textAllCaps="false"
        android:textColor="#000"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_icon"
        android:layout_toRightOf="@id/iv_icon"
        android:text="comment"
        android:textColor="#000"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_icon"
        android:layout_alignParentRight="true"
        android:text="type"
        android:textColor="#000"
        android:textSize="15sp" />

</RelativeLayout>